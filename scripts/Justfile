otter-dev-up:
	#!/bin/bash
	mkdir -p logs
	RUST_LOG=debug,otter=trace,otter_precompiles=trace \
	cargo run --bin otter node \
		--chain genesis/staccato.json \
		--datadir data \
		--dev \
		--dev.block-time 1sec \
		--http \
		--http.addr 0.0.0.0 \
		--http.port 8545 \
		--http.api all \
		--engine.disable-precompile-cache \
		--builder.gaslimit 3000000000 \
		--builder.max-tasks 8 \
		--builder.deadline 3 \
		--faucet.enabled \
		--faucet.private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 \
		--faucet.amount 1000000000000000 \
		--faucet.address 0x20c0000000000000000000000000000000000000 \
		> logs/otter-dev.log 2>&1 &
	PID=$!
	echo "Started otter-dev with PID $PID"

otter-dev-down:
	#!/bin/bash
	if pkill -f "otter node"; then
		echo "Killed otter node processes"
	else
		echo "No otter-dev processes found"
	fi
	# Clean up logs and data
	rm -rf logs data
	echo "Cleaned up logs and data directories"

